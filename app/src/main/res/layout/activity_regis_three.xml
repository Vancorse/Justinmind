<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fikrirahmanto.justinmind.RegisThree">

    <RelativeLayout
        android:layout_width="382dp"
        android:layout_height="517dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-5dp">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:layout_marginTop="27dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/progressBar2"
            android:layout_alignStart="@+id/progressBar2"
            android:layout_below="@+id/progressBar2"
            android:text="1%" />

        <EditText
            android:id="@+id/editText17"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="126dp"
            android:ems="10"
            android:background="@android:color/transparent"
            android:inputType="textPersonName"
            android:text="Wow, very nice!" />

        <EditText
            android:id="@+id/editText18"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText17"
            android:layout_alignStart="@+id/editText17"
            android:layout_below="@+id/editText17"
            android:ems="10"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:text="Would you like us to share a little bit more about mutual funds?" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/progressBar2"
            android:layout_alignLeft="@+id/editText18"
            android:layout_alignRight="@+id/progressBar2"
            android:layout_alignStart="@+id/editText18"
            android:layout_below="@+id/editText18"
            android:layout_marginTop="18dp"
            android:background="@android:color/holo_orange_light"
            android:text="A. Yes" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button13"
            android:layout_alignLeft="@+id/button13"
            android:layout_alignRight="@+id/button13"
            android:layout_alignStart="@+id/button13"
            android:layout_below="@+id/button13"
            android:layout_marginTop="11dp"
            android:background="@android:color/holo_orange_light"
            android:onClick="gotoRegisSix"
            android:text="B. No, thank you" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
